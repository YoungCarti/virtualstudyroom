rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // All authenticated users can read all user profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Classes
    match /classes/{classCode} {
      allow create: if request.auth != null && request.resource.data.lecturerId == request.auth.uid;
      allow read: if request.auth != null;
      allow write: if request.auth != null && resource.data.lecturerId == request.auth.uid;

      // Assignments
      match /assignments/{document=**} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && get(/databases/$(database)/documents/classes/$(classCode)).data.lecturerId == request.auth.uid;
      }

      // Groups: all class members can read and update
      match /groups/{groupId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth != null && (request.auth.uid in resource.data.members || request.auth.uid in request.resource.data.members);

        // Messages: only group members can read and write
        match /messages/{messageId} {
          allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/classes/$(classCode)/groups/$(groupId)).data.members;
          allow create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/classes/$(classCode)/groups/$(groupId)).data.members;
        }
      }

      // Materials
      match /materials/{document=**} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && get(/databases/$(database)/documents/classes/$(classCode)).data.lecturerId == request.auth.uid;
      }
    }

    // Legacy groups (for chat) - kept for backward compatibility
    match /groups/{groupId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.members;
      allow create: if request.auth != null;
    }
  }
}
