rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Rule 1: Allow authenticated users to read and write (upload)
    // files for the general assignment attachments path (used by createAssignment).
    match /classes/{classCode}/assignments/{fileName} {
      allow read, write: if request.auth != null;
    }

    // Rule 2: Allow authenticated users to read and write (upload)
    // files for student/group submissions (used by submitAssignment).
    match /classes/{classCode}/assignments/{assignmentId}/submissions/{fileName} {
      allow read, write: if request.auth != null;
    }

    // Rule 3: Allow authenticated users to read and write (upload)
    // files for group chat uploads.
    match /chat_uploads/{classCode}/{groupId}/{fileName} {
      allow read, write: if request.auth != null;
    }

    // Rule 4: Allow authenticated users to upload their own profile photo
    match /profile_photos/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Rule 5: Allow authenticated users to read and write class materials
    match /class_materials/{classCode}/{fileName} {
      allow read, write: if request.auth != null;
    }

    // Rule 6: Allow authenticated users to upload to-do images
    match /todo_images/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Default rule: Deny access to all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
